<%- include ("../layouts/cabecera.ejs")%>

<form method="post" action="/actualizar" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="my-input">id</label>
        <input id="my-input" value="<%=tenis.id%>" class="form-control" type="text" name="id">
    </div>
    <br>
    <div class="form-group">
        <label for="my-input">Nombre</label>
        <input id="my-input" value="<%=tenis.nombre%>" class="form-control" type="text" name="nombre">
    </div>
    <br>
    <select class="form-select" aria-label="Default select example" name="categoria">
        <option selected>Categor√≠as</option>
        <option value="Funkos">Funkos</option>
        <option value="Comics/Mangas">Comics/Mangas</option>
        <option value="Ropa">Ropa</option>
        <option value="Peliculas">Peliculas</option>
        <option value="Juguetes">Juguetes</option>
      </select>
    <br>
    <div class="form-group">
        <label for="my-input">Cantidad</label>
        <input id="my-input" value="<%=tenis.cantidad%>" class="form-control" type="text" name="cantidad">
    </div>
    <br>
    <div class="form-group">
        <label for="my-input">Descripcion</label>
        <input id="my-input" value="<%=tenis.descripcion%>" class="form-control" type="text" name="descripcion">
    </div>
    <div class="form-group">
        <label for="my-input">Precio</label>
        <input id="my-input" value="<%=tenis.precio%>" class="form-control" type="text" name="precio">
    </div>
    <div class="form-group">
        <label for="my-input">Imagen</label>
        <img class="img-thumbnail" src="../../images/<%=tenis.imagen%>" width="100" alt="">
        <input id="my-input" class="form-control-file" type="file" name="imagen">
    </div>
    <br>
    <button class="btn btn-success" type="submit" >Guardar</button>
</form>
